<Window x:Class="TestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWpf"
        xmlns:UCns="clr-namespace:TestWpf.UserControls"
        mc:Ignorable="d"
        Name="MyWindow"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:TestVM x:Key="testVM"/>
    </Window.Resources>
    <WrapPanel DataContext="{StaticResource testVM}">
        <UCns:UserControl1 MyProperty1="baba" 
                           MyProperty2="{Binding Camber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Text="{Binding Camber, UpdateSourceTrigger=PropertyChanged}" Width="80"/>
    </WrapPanel>
</Window>
