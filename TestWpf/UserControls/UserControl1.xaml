<UserControl x:Class="TestWpf.UserControls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWpf.UserControls"
             mc:Ignorable="d" 
             Name="UC1"
             d:DesignHeight="100" d:DesignWidth="200">
    
    <WrapPanel>
        <TextBox Text="{Binding MyProperty1, ElementName=UC1, UpdateSourceTrigger=PropertyChanged}" Width="50" Height="20"/>
        <TextBox Text="{Binding MyProperty2, ElementName=UC1, 
            UpdateSourceTrigger=PropertyChanged}" Width="50" Height="20"/>
    </WrapPanel>
</UserControl>
