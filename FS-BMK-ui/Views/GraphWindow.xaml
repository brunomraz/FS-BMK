<Window x:Class="FS_BMK_ui.Views.GraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FS_BMK_ui.Views"
        mc:Ignorable="d"
        Title="GraphWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label VerticalAlignment="Center" HorizontalAlignment="Center"
                Content="{Binding XValues[0]}"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Width" />
            <TextBox Width="50"/>
            <TextBlock Text="Flatness" />
            <TextBox Width="50"/>
            <TextBlock Text="Target" />
            <TextBox Width="50"/>
        </StackPanel>
        <ContentControl Content="{Binding Graph}">
            
        </ContentControl>
    </Grid>
</Window>
